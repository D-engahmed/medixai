# Application Settings
APP_NAME=MedixAI
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS=localhost,127.0.0.1,api.medixai.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://medixai.com

# Server
HOST=0.0.0.0
PORT=8000
WORKERS_COUNT=4
RELOAD=True

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=medixai
POSTGRES_USER=medixai
POSTGRES_PASSWORD=change-in-production
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-in-production
REDIS_DB=0
REDIS_POOL_SIZE=20

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=change-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=medixai
JWT_AUDIENCE=medixai-users

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_REQUESTS=5
RATE_LIMIT_AUTH_WINDOW=300

# Email Configuration
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@medixai.com
EMAIL_FROM_NAME=MedixAI

# External Services
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
SENDGRID_API_KEY=SG.your_sendgrid_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
GOOGLE_MAPS_API_KEY=your_google_maps_key

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=medixai-files

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
PROMETHEUS_METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health
LOG_LEVEL=INFO

# Chat Model Configuration
CHAT_MODEL_ENDPOINT=http://chat-model:8000
GENERAL_CHAT_MODEL_ENDPOINT=http://general-chat-model:8000
MODEL_TIMEOUT_SECONDS=30

# Security
ENCRYPTION_KEY=your-encryption-key-32-bytes-length
SSL_KEYFILE=/path/to/ssl/key.pem
SSL_CERTFILE=/path/to/ssl/cert.pem

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Development Settings
RELOAD_ON_CHANGE=True
SHOW_ERROR_DETAILS=True
ENABLE_DOCS=True 